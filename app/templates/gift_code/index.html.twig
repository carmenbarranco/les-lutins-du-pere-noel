{% extends 'base.html.twig' %}

{% block title %}GiftCode index{% endblock %}

{% block body %}
    <h1>GiftCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift_code in gift_codes %}
            <tr>
                <td>{{ gift_code.id }}</td>
                <td>{{ gift_code.code }}</td>
                <td>{{ gift_code.createdAt ? gift_code.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gift_code.updatedAt ? gift_code.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('gift_code_show', {'id': gift_code.id}) }}">show</a>
                    <a href="{{ path('gift_code_edit', {'id': gift_code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gift_code_new') }}">Create new</a>
{% endblock %}
