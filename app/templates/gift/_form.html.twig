{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row mt-3">
    <div class="col-md-6">
        <a href="{{ path('gift_index') }}">Retour</a>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12 border-left border-right border-bottom  bg-white p-0 formsCard">
        <div class="card-header card-header-sm card-header-primary mb-4 formsCardHeader">
            <h4 class="h4 text-white text-center">Usine</h4>
        </div>
        <div class="col-md-12 mt-5 mb-5">
            <div class="row">
                <div class="col-md-4 text-center form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="col-md-4 text-center form-group">
                    {{ form_label(form.code) }}
                    {{ form_widget(form.code) }}
                </div>
                <div class="col-md-4 text-center form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 text-center form-group">
                    {{ form_label(form.receiver) }}
                    {{ form_widget(form.receiver) }}
                </div>
                <div class="col-md-6 text-center form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row text-center mt-4">
    <div class="offset-4 col-md-4 form-group offset-4">
        <button class="btn text-white btn-success bg-success saveButtons">{{ button_label|default('Sauvegarder') }}</button>
    </div>
</div>
{{ form_end(form) }}

