{% extends 'base.html.twig' %}

{% block title %}Gift index{% endblock %}

{% block body %}
    <h1>Gift index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td>{{ gift.id }}</td>
                <td>{{ gift.createdAt ? gift.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gift.updatedAt ? gift.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gift.description }}</td>
                <td>{{ gift.price }}</td>
                <td>
                    <a href="{{ path('gift_show', {'id': gift.id}) }}">show</a>
                    <a href="{{ path('gift_edit', {'id': gift.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gift_new') }}">Create new</a>
{% endblock %}
