{% extends 'base.html.twig' %}

{% block title %}Jouet{% endblock %}

{% block body %}
    <div class="container bg-white mt-5">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('gift_index') }}">Retourner à la liste de cadeaux</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12 border-left border-right border-bottom  bg-white p-0">
                <div class="card-header card-header-sm card-header-primary mb-4">
                    <h2 class="text-white text-center ">{{ gift.name }}</h2>
                </div>
                <div class="col-md-12 mt-5 mb-5">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <h5 class="h5">Code</h5>
                                    <p>{{ gift.code }}</p>
                                </div>
                                <div class="col-md-3">
                                    <h5 class="h5">Prix</h5>
                                    <p>{{ gift.price }}</p>
                                </div>
                                <div class="col-md-6 text-center">
                                    <h5 class="h5">Description</h5>
                                    <p>{{ gift.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <p>{{ gift.receiver.firstName }} {{ gift.receiver.lastName }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="row justify-content-md-center">
                        {% if is_granted('ROLE_CHIEF') %}
                            <div class="col-md-2">
                                <a class="btn btn-success bg-success btn-sm text-white"
                                   href="{{ path('gift_edit', {'id': gift.id}) }}">Éditer</a>
                            </div>
                            <div class="col-md-2">
                                {{ include('gift/_delete_form.html.twig') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}


