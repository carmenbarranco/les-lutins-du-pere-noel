{% extends 'base.html.twig' %}

{% block title %}Gift{% endblock %}

{% block body %}
    <h1>Gift</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ gift.createdAt ? gift.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ gift.updatedAt ? gift.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gift.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ gift.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gift_index') }}">back to list</a>

    <a href="{{ path('gift_edit', {'id': gift.id}) }}">edit</a>

